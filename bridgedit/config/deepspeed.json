{
    "train_micro_batch_size_per_gpu": 1,
    "gradient_clipping": 1.0,
    "steps_per_print": 50,
  
    "zero_optimization": {
        "stage": 3,
        "offload_optimizer": {
            "device": "cpu",
            "pin_memory": true
        },
        "allgather_partitions": true,
        "allgather_bucket_size": 5e8,
        "reduce_scatter": true,
        "reduce_bucket_size": 5e8,
        "overlap_comm": true,
        "contiguous_gradients": true
    },
  
    "bf16": {
        "enabled": true
    },
  
    "wall_clock_breakdown": false,
    "flops_profiler": {                 
        "enabled": true,         
        "profile_step": 1,       
        "module_depth": -1,      
        "top_modules": 3,        
        "detailed": true         
    }
}